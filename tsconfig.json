{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "target": "ESNext", 
    "types": ["jest", "@testing-library/jest-dom", "@types/testing-library__react"],                       
